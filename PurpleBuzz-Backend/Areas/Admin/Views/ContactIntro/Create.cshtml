@using PurpleBuzz_Backend.Models
@model ContactIntro
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Add contact intro component
                        </p>
                        <form method="post" enctype="multipart/form-data" asp-action="create" asp-controller="contactintro" asp-area="admin">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span class="text-danger" asp-validation-for="Title"></span>
                                
                                <br />
                                <label asp-for="PrimaryText">Primary Text</label>
                                <input class="form-control" asp-for="PrimaryText">
                                <span class="text-danger" asp-validation-for="PrimaryText"></span>

                                <br />
                                <br />
                                <label asp-for="Description">Description</label>
                                <input class="form-control" asp-for="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>

                                <br />

                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>