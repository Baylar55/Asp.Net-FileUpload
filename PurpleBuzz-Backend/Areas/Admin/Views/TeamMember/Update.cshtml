@using PurpleBuzz_Backend.Areas.Admin.ViewModels.TeamMember;
@model TeamMemberUpdateViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <p class="card-description">
                            Update Team member
                        </p>
                        <form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="teammember" asp-area="admin">
                            <div class="d-flex justify-content-center"><img src="~/assets/img/@Model.PhotoPath" /></div>
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input class="form-control" asp-for="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname">Surname</label>
                                <input class="form-control" asp-for="Surname">
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Position">Position</label>
                                <input class="form-control" asp-for="Position">
                                <span class="text-danger" asp-validation-for="Position"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Photo"></label>
                                <input class="form-control" asp-for="Photo" />
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>