@using PurpleBuzz_Backend.Areas.Admin.ViewModels.FeaturedWorkComponent
@model FeaturedWorkComponentIndexViewModel
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Featured Work Component</h4>
                        @{
                            if (Model.FeaturedWorkComponent != null)
                            {
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Title</th>

                                                <th colspan="3" style="text-align:center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Model.FeaturedWorkComponent.Id</td>
                                                <td>@Model.FeaturedWorkComponent.Title</td>
                                                <td>
                                                    <a asp-action="update" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.FeaturedWorkComponent.Id" class="btn btn-primary">Update</a>
                                                </td>
                                                <td>
                                                    <a onclick="confirm('Are you sure')" asp-action="delete" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.FeaturedWorkComponent.Id" class="btn btn-danger">Delete</a>
                                                </td>
                                                <td>
                                                    <a asp-action="details" asp-controller="featuredworkcomponent" asp-area="admin" asp-route-id="@Model.FeaturedWorkComponent.Id" class="btn btn-info">Details</a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                            }
                            else
                            {
                                <a class="btn btn-primary" asp-action="create" asp-controller="featuredworkcomponent" asp-area="admin">Add featured work component</a>
                            }
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © <a href="https://www.bootstrapdash.com/" target="_blank">bootstrapdash.com </a>2021</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Only the best <a href="https://www.bootstrapdash.com/" target="_blank"> Bootstrap dashboard  </a> templates</span>
        </div>
    </footer>
    <!-- partial -->
</div>
